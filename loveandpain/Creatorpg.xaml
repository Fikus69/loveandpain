<Page x:Class="loveandpain.Creatorpg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:loveandpain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Creatorpg">
    <Page.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Page.Resources>
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Над игрой старались:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="Prog" Grid.Row="1"/>
        <TextBox x:Name="Scene" Grid.Row="2"/>
        <TextBox x:Name="Art" Grid.Row="3"/>
        <TextBox x:Name="Muse" Grid.Row="4"/>
        <TextBox x:Name="Thks" Grid.Row="5"/>
    </Grid>
</Page>
